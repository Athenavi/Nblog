# ===== 基础设置 =====
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# ===== 数据库配置 =====
DJANGO_DB_ENGINE=mysql
DJANGO_DB_NAME=nblog
DJANGO_DB_USER=nblog
DJANGO_DB_PASSWORD=
DJANGO_DB_HOST=127.0.0.1
DJANGO_DB_PORT=3306

# ===== CORS 设置 =====
DJANGO_CORS_ALLOWED_ORIGINS=https://your-production-domain.com
DJANGO_CORS_ALLOW_ALL=False

# ===== 国际化设置 =====
DJANGO_LANGUAGE_CODE=zh-hans
DJANGO_TIME_ZONE=Asia/Shanghai

# ===== 缓存设置 =====
DJANGO_CACHE_BACKEND=locmem.LocMemCache
DJANGO_CACHE_LOCATION=unique-snowflake

# ===== 日志设置 =====
DJANGO_LOG_LEVEL=INFO

# ===== 高级设置 (生产环境) =====
# DJANGO_STATIC_ROOT=/path/to/staticfiles
# DJANGO_MEDIA_ROOT=/path/to/media